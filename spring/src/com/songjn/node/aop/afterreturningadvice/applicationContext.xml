<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
        http://www.springframework.org/schema/beans 
        http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!-- 注册目标对象 -->
	<bean id="myService" class="com.songjn.node.aop.afterreturningadvice.SomeServiceImpl"></bean>

	<!-- 注册切面：通知 -->
	<bean id="myAdvice"
		class="com.songjn.node.aop.afterreturningadvice.MyAfterReturningAdvice"></bean>

	<!-- 生成代理对象 -->
	<bean id="serviceProxy" class="org.springframework.aop.framework.ProxyFactoryBean">
		<!-- <property name="targetName" value="myService"></property> -->
		<!-- 指定目标对象 -->
		<property name="target" ref="myService"></property>
		<!-- 指定切面 -->
		<property name="interceptorNames" value="myAdvice"></property>
	</bean>

</beans>